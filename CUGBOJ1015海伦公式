#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

int main()
{
    int n;cin>>n;
    for(int i = 0;i < n;i++){
        double a,b,c;
        cin>>a>>b>>c;
        double s;
        s=(a+b+c)/2;
        double area=sqrt(s*(s-a)*(s-b)*(s-c));
        cout<<fixed<<setprecision(3)<<area<<endl;
    }
    return 0;
}
